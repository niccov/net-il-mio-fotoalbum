@{
    Layout = "_Layout";
}

@model Categoria

<div class="container p-2">
    <h1>Creazione categoria</h1>

    <form asp-controller="Categoria" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="@Model.Nome" class="label">Inserisci il nome della nuova categoria:</label>
            <input type="text" class="form-control" asp-for="@Model.Nome" />
            <span asp-validation-for="@Model.Nome" class="text-danger"></span>
        </div>

        <div class="text-center mt-2">
            <button type="submit" class="btn btn-light">Invia</button>
        </div>

    </form>

        <div class="text-center mt-4">
            <button type="button" class="btn btn-primary">
                <a style="color: white;" href="@Url.Action("Index","Categoria")">Torna alle categorie</a>
            </button>
        </div>

</div>
